<Window x:Class="SportShopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportShopApp"
        mc:Ignorable="d"
        Title="ИС по прокату спортивного инвентаря" Height="700" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FF76E383">
            <TextBlock Text="ИС по прокату спортивного инвентаря" VerticalAlignment="Center"
                       HorizontalAlignment="Center" FontSize="25"></TextBlock>
            <Image Source="/Resources/logo.png" VerticalAlignment="Center"
               HorizontalAlignment="Left" Margin="100,0,0,0"></Image>
        </Grid>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" VerticalAlignment="Center"
               HorizontalAlignment="Center" Grid.Row="1"></Frame>
        
    </Grid>
</Window>
